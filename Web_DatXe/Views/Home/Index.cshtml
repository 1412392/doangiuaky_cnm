@{
    ViewBag.Title = "Đặt xe";
}

<section id="contact">
    <div class="section-content">
        <h1 class="section-header">Nhập thông tin<span class="content-header wow fadeIn " data-wow-delay="0.2s" data-wow-duration="2s"> khách hàng</span></h1>
    </div>
    <div class="contact-section">
        <div class="container">
            <form id="submitform">
                <div class="col-md-6 form-line">
                    <div class="form-group">
                        <label for="customerName">Tên khách hàng</label>
                        <input type="text" v-model="name" class="form-control" id="customerName" placeholder=" Nhập tên">
                    </div>
                    <div class="form-group">
                        <label for="telephone">Số điện thoại</label>
                        <input type="tel" v-model="phone" class="form-control" id="telephone" placeholder=" Nhập 11 số">
                    </div>
                    <div class="form-group">
                        <label for="type">Loại xe</label>
                        <select v-model="type" class="form-control" id="type">
                            <option value="1" selected>Thường</option>
                            <option value="2">Premium</option>

                        </select>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="address"> Địa điểm</label>
                        <textarea class="form-control" v-model="address" id="address" placeholder="Vị trí đón khách"></textarea>
                    </div>


                </div>
                <div>
                    <a type="submit" style="margin-right:100px;margin-left: 15px;" href="javascript:void(0)" class="btn btn-default submit pull-left" v-on:click="submitInfo()" id="submit"><i class="fa fa-paper-plane" aria-hidden="true"></i>  Xác nhận</a>
                   
                </div>
                </form>
        </div>
    </div>
</section>
